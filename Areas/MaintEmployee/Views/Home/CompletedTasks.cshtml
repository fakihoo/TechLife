@model IEnumerable<TechLife.Models.Service>
@{
    Layout = "_MaintEmployee";
}

<div class="container">
    <h2>Completed Maintenance Requests</h2>

    <form asp-action="CompletedTasks" method="get">
        <div class="form-group">
            <label for="StartDate">Start Date</label>
            <input type="date" name="StartDate" class="form-control" />
        </div>
        <div class="form-group">
            <label for="EndDate">End Date</label>
            <input type="date" name="EndDate" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Customer Name</th>
                <th>Service Type</th>
                <th>Device Model</th>
                <th>Completed At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ServiceId</td>
                    <td>@service.CustName</td>
                    <td>@service.ServiceType</td>
                    <td>@service.deviceModel</td>
                    <td>@service.CompletedAt?.ToString("MM/dd/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
