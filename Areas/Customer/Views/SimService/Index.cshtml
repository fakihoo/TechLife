@{
    Layout = "_NewLayout";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</head>
<style>
    .curved {
        position: relative;
        background: #2c3e50;
        height: 30vh;
        border-bottom-left-radius: 50% 20%;
        border-bottom-right-radius: 50% 20%;
    }
    .btn-custom {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }

        .btn-custom:hover {
            background-color: #007BFF; /* Primary color for hover */
            border-color: #007BFF;
        }

    .btn-danger-custom {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }

        .btn-danger-custom:hover {
            background-color: #DC3545; /* Danger color for hover */
            border-color: #DC3545;
        }
</style>
<partial name="_Notification"/>
<section>
    <div class="curved"></div>
</section>
<div class="col-md-12">
    @if (User.IsInRole(SD.Role_Admin))
    {
        <a asp-area="Admin" asp-controller="SimServicesToDo" asp-action="Index" class="btn btn-success float-md-end mx-2">
            <i class="bi bi-bag"></i> Services
        </a>
    }
</div>
<div class="d-flex align-items-center justify-content-center mt-1" style="min-height:100vh;">
    
    <div class="d-grid gap-2 col-6">
        <a asp-area="" asp-controller="SimService" asp-action="MtcIndex" class="btn btn-primary btn-lg btn-custom d-flex align-items-center justify-content-center" style="height: 150px; font-size: 1.5rem;">
            Mtc
        </a>
        <a asp-area="" asp-controller="SimService" asp-action="AlfaIndex" class="btn btn-danger btn-lg btn-danger-custom d-flex align-items-center justify-content-center" style="height: 150px; font-size: 1.5rem;">
            Alfa
        </a>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group row">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Phone Number</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="inputNumber" placeholder="8-digit-phone-number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputAmount" class="col-sm-2 col-form-label">Amount</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="inputAmount" placeholder="please enter the amount of ceridit required">
                                </div>
                            </div>
                            <fieldset class="form-group">
                                <div class="row">
                                    <legend class="col-form-label col-sm-2 pt-0">Radios</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                MTC
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                Alfa
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </fieldset>


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success">Request Credit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

