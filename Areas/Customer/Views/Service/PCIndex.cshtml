@model Service

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech Life</title>
    <link rel="stylesheet" href="~/css/PhoneRepair.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>

<body>
    <div class="container-fluid p-0">
        <div class="header">
            <img src="~/img/repaiphone3.jpg" alt="Header Image" class="header-image">
            <div class="col-md-4">
                <div class="header-text">
                    <h1>PC & MAC Repair</h1>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <a class="card-link" asp-controller="Service" asp-action="PHIndex">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Smartphone & Tablet Repair</h5>
                            <i class="bi bi-arrow-right"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class=" col-md-4 mb-3">
                <a class="card-link" asp-controller="Service" asp-action="PCIndex">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">PC & MAC Repair</h5>
                            <i class="bi bi-arrow-right"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a class="card-link" asp-controller="Service" asp-action="TVIndex">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Television Repair</h5>
                            <i class="bi bi-arrow-right"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="flex-container">
        <div class="flex-feedback">
            <div class="center-content">
                <div class="col-md-8 order-md-last">
                    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="carousel-content">
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title"><i class="bi bi-quote"></i>Feedback:</h5>
                                            <p class="card-text">
                                                This is One of the best shops in town, It only took 15 minutes to repair my
                                                broken Screen
                                            </p>
                                        </div>
                                        <div class="card-footer d-flex align-items-center">
                                            <img src="~/img/faceimg.jfif" alt="Profile Photo 1" class="rounded-circle" width="50" height="50">
                                            <div class="ms-3">
                                                <p class="mb-0">Sarah Doe</p>
                                                <div class="rating">
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="carousel-content">
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title"><i class="bi bi-quote"></i>Feedback:</h5>
                                            <p class="card-text">
                                                Great Experience, i will definetly consider this shop in all my devices,
                                                thanks for this serving
                                                
                                            </p>
                                        </div>
                                        <div class="card-footer d-flex align-items-center">
                                            <img src="~/img/faceimg2.jfif" alt="Profile Photo 2" class="rounded-circle" width="50" height="50">
                                            <div class="ms-3">
                                                <p class="mb-0">Diana Styles</p>
                                                <div class="rating">
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                    <span class="bi bi-star-fill"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <br>
                        <br>
                        <div class="callback-box">
                            <h3 style="color: #007bff;">Request a Callback</h3>
                            <form asp-controller="Service" asp-action="Add" method="post">
                                <div class="form-group">
                                    <label asp-for="CustName">Name</label>
                                    <input asp-for="CustName" type="text" class="form-control" id="nameInput" placeholder="Enter your name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Location">Location</label>
                                    <input asp-for="Location" type="text" class="form-control" id="emailInput" placeholder="Enter your Address">
                                </div>
                                <div class="form-group">
                                    <label asp-for="ServiceType">Phone</label>
                                    <input asp-for="ServiceType" type="text" class="form-control" id="phoneInput" placeholder="Enter your number">
                                </div>
                                <div class="form-group">
                                    <label asp-for="deviceModel">Device Model</label>
                                    <input asp-for="deviceModel" type="text" class="form-control" id="phoneInput" placeholder="Enter your Device">
                                </div>
                                <div class="form-group">
                                    <label asp-for="message">Message</label>
                                    <textarea asp-for="message" class="form-control" id="messageTextarea" rows="3"
                                              placeholder="Enter your message"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-content">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-12 d-flex justify-content-center align-items-center order-md-first">
                        <img src="~/img/pc-repair-2.jpg" class="img-fluid larger-image" alt="Image" class="RepairImg">
                    </div>
                    <div class="col-md-12">
                        <h2>High Quality Repair Sevice</h2>
                        <p class="repair-service-text">
                            Experience top-notch repair services for your PC and MAC devices with our dedicated team of experts. We specialize in delivering high-quality solutions catered to your device's needs. Whether it's hardware glitches, software issues, or performance optimization, trust us to provide reliable repairs promptly. Your satisfaction is our priority as we restore your devices to their optimal functionality, ensuring you can get back to work with ease and efficiency.
                        </p>
                        <br>
                        <br>
                        <div class="services-section">
                            <div class="services-left">
                                <ul>
                                    <li><i class="bi bi-check-lg tick-icon"></i> Hardware Diagnostics</li>
                                    <li><i class="bi bi-check-lg tick-icon"></i> Operating System Optimization</li>
                                    <li><i class="bi bi-check-lg tick-icon"></i> Data Recovery Services</li>
                                    <li><i class="bi bi-check-lg tick-icon"></i> Virus and Malware Removal</li>
                                </ul>
                            </div>
                            <div class="services-right">
                                <ul>
                                    <li><i class="bi bi-check-lg tick-icon"></i>Hardware Upgrades </li>
                                    <li><i class="bi bi-check-lg tick-icon"></i>Software Installation and Configuration</li>
                                    <li><i class="bi bi-check-lg tick-icon"></i>Peripheral Connectivity Solutions</li>
                                    <li><i class="bi bi-check-lg tick-icon"></i>Screen Fixing</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var myCarousel = document.getElementById('myCarousel');
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 5000,
                wrap: true,
                touch: true,
            });
        });
    </script>
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
    <df-messenger intent="WELCOME"
                  chat-title="TechLife"
                  agent-id="ceaa4ce1-c8ee-4ec1-a514-40964c2d60d7"
                  language-code="en"></df-messenger>
</body>

</html>