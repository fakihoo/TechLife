@model ToDoList

<h1>Add New Note To Do:</h1>
<br />
<br />
<br />
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pc-2">
            <h2 class="text-primary">Add To Shop</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ToDoListText">Note</label>
            <input asp-for="ToDoListText" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="ToDoListDuration">Task Duration</label>
            <input asp-for="ToDoListDuration" class="form-control" required />
        </div>
        <div class="row mt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
            </div>
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width:150px">GO Back</a>
            </div>
        </div>


    </div>
</form>
