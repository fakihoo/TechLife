@model TechLife.Models.DTOs.PaymentSuccessViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Success</title>
    <style>
        .container {
            text-align: center;
            padding: 20px;
        }
        h1 {
            font-size: 36px;
            color: #333;
            margin-bottom: 20px;
        }
        h2 {
            font-size: 24px;
            color: #555;
            margin-bottom: 30px;
        }
        img.payment-success-img {
            max-width: 80%;
            height: auto;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
            justify-content: center;
        }
        .card {
            position: relative;
            width: 300px;
            height: 200px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 0 5px #ffffff80;
            transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            display: flex;
            flex-direction: column;
            margin: 20px;
        }
        .card-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
        }
        .card__content {
            position: relative;
            z-index: 2;
            width: 100%;
            height: 100%;
            padding: 20px;
            box-sizing: border-box;
            background-color: rgba(242, 242, 242, 0.9);
            transform: rotateX(-90deg);
            transform-origin: bottom;
            transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .card:hover .card__content {
            transform: rotateX(0deg);
        }
        .card__title {
            margin: 0;
            font-size: 24px;
            color: #333;
            font-weight: 700;
        }
        .card__description {
            margin: 10px 0 0;
            font-size: 14px;
            color: #777;
            line-height: 1.4;
        }
        @@media (max-width: 768px) {
            .card {
                width: calc(50% - 20px);
            }
        }
        @@media (max-width: 480px) {
            .card {
                width: calc(100% - 20px);
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "SimService", new { area = "Customer" })" class="back-arrow">
        &#8592;
    </a>
    <div class="container">
        <h1>Payment Success</h1>
        <img src="~/img/51cfad98bd791d1cd2095a05eaa59604.png" alt="Payment Success Image" class="payment-success-img" />
        @if (Model.RecommendedBundles != null)
        {
            <h2>We Recommend the Following Internet Bundles:</h2>
        }
        <div class="card-container">
            @foreach (var bundle in Model.RecommendedBundles)
            {
                <a href="@Url.Action("Add", "SimServicesToDo", new { area = "Admin", id = bundle.SimServiceId })" class="card shadow rounded">
                    <img src="/@bundle.ImgUrl" alt="Card image" class="card-img">
                    <div class="card__content">
                        <p class="card__title">@bundle.SimServiceName</p>
                        <p class="card__description">
                            @bundle.SimServiceType 
                            @if (!bundle.SimServiceType.Equals("Internet", StringComparison.OrdinalIgnoreCase)) 
                            { 
                                <text>, for $@bundle.Price</text> 
                            }
                        </p>
                    </div>
                </a>
            }
        </div>
    </div>
</body>
</html>
