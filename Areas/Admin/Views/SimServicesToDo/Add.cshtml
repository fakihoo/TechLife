
@model TechLife.Models.SimServicesToDo

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-center">Add Request</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post">
                        <div class="form-group">
                            <label asp-for="CustName">Name</label>
                            <input asp-for="CustName" class="form-control" required />
                            <span asp-validation-for="CustName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-5">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <input type="hidden" asp-for="SimServicesToDoName" value="@Model.SimServicesToDoName" />
            <input type="hidden" asp-for="CustName" value="@Model.CustName" />
            <input type="hidden" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
            <input type="hidden" asp-for="SimType" value="@Model.SimType" />
            <input type="hidden" asp-for="Price" value="@Model.Price" />
            <input type="hidden" asp-for="SimServiceId" value="@Model.SimServiceId" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
            